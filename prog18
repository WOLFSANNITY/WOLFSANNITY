#include<stdio.h>
int main()
{
    int choice,sum=0,i,j,x;
    int r,c;
	printf("Enter number rows and columns : ");
	scanf("%i %i",&r,&c);
	int ar[r][c];
	

	for(i=0;i<=(r-1);i++)
	{
		for(j=0;j<=c-1;j++)
		{
			printf("Enter the values in row %i : ",i+1);
			scanf("%i",&ar[i][j]);
		}
	}
	
	printf("1-To calculate sum of each row\n2-To calculate sum of each column\nEnter your choice : ");
	scanf("%i",&choice);
	switch (choice)
	{
		case 1:
		{
			
			for(i=0;i<=(r-1);i++)
			{
				for(j=0;j<=c-1;j++)
				{
				    x = ar[i][j];
				    sum+=x;
				}
				printf("\nsum = %i",sum);
				sum=0;
			}
			break;
			
		}
		
		case 2:	
		{
			
			for(i=0;i<=(r-1);i++)
			{
			
				for(j=0;j<=c-1;j++) 
				{
				    x = ar[j][i];
				    sum+=x;
				}
				printf("\nsum = %i",sum);
				sum=0;
			}
			break;

			
		}
		
		
		
	}
	return 0;
}
	
